<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mag"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="Mag"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/myBlue"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/place"/>

    <TextView
        android:id="@+id/place"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-medium"
        android:layout_height="@dimen/list_heighter_height"
        android:textColor="@color/myBlue"
        android:textStyle="bold"
        android:gravity="left|center"
        android:text="Place of earthquake"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toEndOf="@+id/mag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="0dp"
        android:fontFamily="sans-serif-medium"
        android:layout_height="@dimen/list_heighter_height"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/myBlue"
        android:text="Date"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintStart_toEndOf="@+id/place"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>




